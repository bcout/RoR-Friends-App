
<div class="bg-light p-5 rounded-lg m-3">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %> |
    <%= @friend.phone %> |
    <%= @friend.twitter %>
  </p>
  <hr class="my-4">
  <br/>
  <p class="lead">
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-primary" %>
    <%= link_to 'Back', friends_path, class:"btn btn-dark" %>

    <br/>
    <br/>
    <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger' %>
  </p>
</div>
